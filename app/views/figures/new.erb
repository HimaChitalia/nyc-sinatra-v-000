<h1>Add a New Figure</h1>

<form action="/figures" method="POST">

  <h3> <label> Figure Name </label> </h3>
  <input type="text" name="figure[name]" id="figure_name"> </br>

  <h3> <label> Titles </label> </h3>
  <% Title.all.each do |title| %>
    <p><input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"> <%= title.name %> </p>
  <% end %></br>

  <h3> or create a new title</h3>
  <!-- <p> Title Name: <input type="text" name="title[name]" id ="Title Name"> </p> </br> -->
  <p> Title Name: <input type="text" name="title[name]" id ="new_title"> </p> </br>


  <h3> <label> Landmarks </label> </h3>
  <% Landmark.all.each do |landmark| %>
    <p><input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"> <%= landmark.name %> </p>
  <% end %></br>

  <h3> or create a new landmark </h3>
  <!-- <p> Landmark Name: <input type="text" name="landmark[name]" id ="Landmark Name"> </p> -->
  <p> Landmark Name: <input type="text" name="landmark[name]" id ="new_landmark"> </p>
  <p> Year Built: <input type="text" name="landmark[year_completed]" id ="Landmark year"> </p> </br>


  <input type="submit" value="Create New Figure">
</form>
